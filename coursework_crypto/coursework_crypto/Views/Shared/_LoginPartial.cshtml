@using Microsoft.AspNetCore.Identity
@using CryptoTracker.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle me-1"></i>
                 @(((ApplicationUser)await UserManager.GetUserAsync(User)).FirstName)
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
                <li>
                    <a class="dropdown-item" asp-controller="Crypto" asp-action="Favorites">
                        <i class="bi bi-star-fill me-2"></i>Мої Вибрані
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Portfolio" asp-action="Index">
                        <i class="bi bi-briefcase-fill me-2"></i>Портфель
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                        <i class="bi bi-gear-fill me-2"></i>Керування
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="dropdown-item">
                            <i class="bi bi-box-arrow-right me-2"></i>Вийти
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item me-2">
            <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right me-1"></i>Login
            </a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus-fill me-1"></i>Register
            </a>
        </li>
    }
</ul>