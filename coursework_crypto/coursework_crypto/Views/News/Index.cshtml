@model List<CryptoTracker.Models.NewsArticle>

@{
    ViewData["Title"] = "Crypto News";
}

<h2 class="mb-4">Останні новини криптовалют</h2>

<div class="row g-4">
    @foreach (var article in Model)
    {
        <div class="col-md-6 col-lg-4 d-flex align-items-stretch">
            <div class="card shadow-sm h-100">
                @if (!string.IsNullOrEmpty(article.ThumbnailUrl))
                {
                    <img src="@article.ThumbnailUrl" class="card-img-top" alt="@article.Title" style="height: 180px; object-fit: cover;">
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@article.Title</h5>
                    <p class="card-text text-muted flex-grow-1">@article.Description</p>
                    <div class="d-flex justify-content-between align-items-center mt-auto pt-2">
                        <a href="@article.Url" target="_blank" class="btn btn-outline-primary btn-sm">Читати далі <i class="bi bi-box-arrow-up-right ms-1"></i></a>
                        <small class="text-muted">@article.NewsSite - @article.UpdatedAt.ToString("dd MMM yyyy, HH:mm")</small>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (!Model.Any())
    {
        <p class="text-muted">Не вдалося завантажити новини.</p>
    }
</div>